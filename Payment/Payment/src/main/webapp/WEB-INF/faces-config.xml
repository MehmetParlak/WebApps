<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>
        <from-view-id>/registration.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registrationBean.registerCustomer}</from-action>
            <from-outcome>customer</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/newAdmin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registrationBean.registerAdmin}</from-action>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/adminHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/adminHome.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>newadmin</from-outcome>
            <to-view-id>/admin/newAdmin.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>alltransactions</from-outcome>
            <to-view-id>/admin/allTrancastions.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>allcustomeraccounts</from-outcome>
            <to-view-id>/admin/allAccounts.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>   
    <navigation-rule>
        <from-view-id>/customer/customerHome.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>moneyTransfer</from-outcome>
            <to-view-id>/customer/moneyTransfer.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>personalTransactions</from-outcome>
            <to-view-id>/customer/customerTransactions.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>requestMoney</from-outcome>
            <to-view-id>/customer/moneyTransfer.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>              
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.login}</from-action>
            <from-outcome>customer</from-outcome>
            <to-view-id>/customer/customerHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginBean.login}</from-action>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/adminHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case> 
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/customer/moneyTransfer.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{transactionBean.sendMoney}</from-action>
            <from-outcome>sent</from-outcome>
            <to-view-id>/customer/customerHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{transactionBean.requestMoney}</from-action>
            <from-outcome>requested</from-outcome>
            <to-view-id>/customer/customerHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/allAccounts.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adminHome</from-outcome>
            <to-view-id>/admin/adminHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/admin/allTransactions.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adminHome</from-outcome>
            <to-view-id>/admin/adminHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

    <managed-bean>
        <managed-bean-name>registrationBean</managed-bean-name>
        <managed-bean-class>com.mp503.payment.jsf.RegistrationBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>com.mp503.payment.jsf.LoginBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customerBean</managed-bean-name>
        <managed-bean-class>com.mp503.payment.jsf.CustomerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>transactionBean</managed-bean-name>
        <managed-bean-class>com.mp503.payment.jsf.TransactionBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
